---
const { title = "Sub Zero" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <link rel="icon" type="image/webp" href="/assets/favicon.webp" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Cloudflare Web Analytics -->
    <script
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon='{"token": "4a193a46be5746789f408a936b7e6be2"}'></script>
    <!-- End Cloudflare Web Analytics -->
  </head>
  <body>
    <header>
      <nav class="nav">
        <a href="/" class="brand">
          <img src={"/assets/subzero.webp"} alt="Sub Zero" class="nav-logo" />
          <span>Sub Zero</span>
        </a>
        <a href="/team">Team</a>
        <a href="/tryouts">Tryouts</a>
        <!-- <a href="/about">About</a> -->
        <a href="/internal">Internal</a>

        <div class="nav-right">
          <a href="mailto:subzerocaptains@gmail.com" class="contact-link"
            >Contact Us</a
          >
          <a href="https://instagram.com/subzerofrisbee">
            <img
              src={"/assets/ig.jpg"}
              alt="Instagram"
              width="40"
              height="40"
            />
          </a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>
